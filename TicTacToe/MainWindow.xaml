<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Tic-Tac-Toe" Height="800" Width="800"
        FontFamily="Segoe UI Light"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="TurnPanel"
                    Orientation="Horizontal"
                   HorizontalAlignment="Center">
                <TextBlock FontSize="54"
                      Text="Player:"
                      Margin="0,0,0,15"/>
                <Image x:Name="PlayerImage"
                  Source="/Assets/X15.png"
                  Height="75"/>
            </StackPanel>

            <Canvas x:Name="GameCanvas"
               Grid.Row="1"
               Width="300"
               Height="300"
               Margin="20">
                <UniformGrid x:Name="GameGrid"
                            Width="300"
                            Height="300"
                            Rows="3"
                            Columns="3"
                            MouseDown="GameGrid_MouseDown">
                    <UniformGrid.Background>
                        <ImageBrush ImageSource="/Assets/Grid.png"/>
                    </UniformGrid.Background>
                </UniformGrid>
                <Line x:Name="Line"
                 Stroke="{StaticResource LineColor}"
                 StrokeThickness="10"
                 StrokeStartLineCap="Round"
                 StrokeEndLineCap="Round"
                 Visibility="Hidden"/>
            </Canvas>

            <Grid x:Name="EndScreen"
             Grid.RowSpan="2"
             Background="#f58a3e" 
             Visibility="Hidden">
                <StackPanel Orientation="Vertical"
                       VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                        <TextBlock x:Name="ResultText"
                              FontSize="54"
                              Text="Winner: "
                              Margin="0,0,0,15"/>
                        <Image x:Name="WinnerImage"
                          Height="75"
                          Source="/Assets/X15.png"/>
                    </StackPanel>
                    
                    <Button Content="Play again?"
                       Background="{StaticResource ButtonColor}"
                       Tag="PlayAgain"
                       FontSize="34"
                       Width="200"
                       Margin="0,20,0,0"
                       Padding="0,0,0,5"
                       BorderBrush="Black"
                       Click="Button_Click"/>

                    <Button Content="Settings"
                       Background="{StaticResource ButtonColor}"
                       Tag="Settings"
                       FontSize="34"
                       Width="200"
                       Margin="0,20,0,0"
                       Padding="0,0,0,5"
                       BorderBrush="Black"
                       Click="Button_Click"/>

                    <Button Content="Quit"
                       Background="{StaticResource ButtonColor}"
                       Tag="Quit"
                       FontSize="34"
                       Width="200"
                       Margin="0,20,0,0"
                       Padding="0,0,0,5"
                       BorderBrush="Black"
                       Click="Button_Click"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="WelcomeScreen"
             Grid.RowSpan="2"
             Background="{StaticResource BackgroundColor}" 
             Visibility="Visible">
                <StackPanel Orientation="Vertical"
                       VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Tic Tac Toe"
                               VerticalAlignment="Center"
                               FontSize="40"
                               HorizontalAlignment="Center"/>

                    <Button Content="Settings"
                       Background="{StaticResource ButtonColor}"
                       FontSize="34"
                       Width="160"
                       Margin="0,20,0,0"
                       Padding="0,0,0,5"
                       BorderBrush="Black"
                       Click="Button_Click_Settings"/>

                    <Button Content="Start"
                       Background="{StaticResource ButtonColor}"
                       FontSize="34"
                       Width="160"
                       Margin="0,20,0,0"
                       Padding="0,0,0,5"
                       BorderBrush="Black"
                       Click="Button_Click_Start"/>

                    <Button Content="Quit"
                        Background="{StaticResource ButtonColor}"
                        FontSize="34"
                        Width="160"
                        Margin="0,20,0,0"
                        Padding="0,0,0,5"
                        BorderBrush="Black"
                        Click="Button_Click_Quit"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
